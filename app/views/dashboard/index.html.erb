<div class="jumbotron">
  <h1>Workout Lounge</h1>
  <p>Share your workouts with your friends and family!</p>
</div>

<div class="row">
  <div class="col-md-10">
    <h2>List of Members</h2>
    <%= will_paginate @users, renderer: BootstrapPagination::Rails,
                              class: 'pull-left paginate' %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @users.each do |user| %>
    <div class="col-md-10 well member">
      <%= user.full_name %>
      <% if current_user %>
      <%= link_to "Follow", friendships_path(friend_id: user.id), method: :post,
          class: 'btn btn-primary pull-right' unless current_user.follows_or_same?(user) %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>